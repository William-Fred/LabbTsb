@model LabbTsb.Models.CitiesData
@{
    ViewData["Title"] = "UpdateCity";
}


<h4 class="rubrik">Updatera staden @Model.CityName</h4>
<a class="link" asp-action="Index">Tillbaka till listan</a>
<form method="post">

    <div class="form-group">
         Id
        <input class="form-control" asp-for="CitiesId" readonly />
    </div>
    <div class="form-group">
        Stad
        <input class="form-control" asp-for="CityName" />
    </div>
    <div class="form-group">
        Postnummer
        <input class="form-control" asp-for="ZipCode" />
    </div>
    <div class="form-group">
        Land
        <input class="form-control" asp-for="CountryName" />
    </div>
    <div class="text-center panel-body">
        <button type="submit" class="btn btn-sm btn-dark">Uppdatera</button>
    </div>
</form>

@if (ViewBag.Result == "All good!")
{
    <h2>Stad</h2>
    <table class="table table-sm table-striped table-bordered m-2">
        <thead>
            <tr>
                <th>ID</th>
                <th>Stad</th>
                <th>Postnummer</th>
                <th>Land</th>
            </tr>
        </thead>
        <tbody>
            <tr>
                <td>@Model.CitiesId</td>
                <td>@Model.CityName</td>
                <td>@Model.ZipCode</td>
                <td>@Model.CountryName</td>
            </tr>
        </tbody>
    </table>
}