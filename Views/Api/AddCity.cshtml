@model LabbTsb.Models.CitiesData
@{
    ViewData["Title"] = "AddCity";
}

<link href="~/css/SideBar.css" rel="stylesheet" />
<h4 class="rubrik">Lägg till en stad</h4>

<form asp-action="AddCity" method="post">
    <div class="form-group">
        <label for="CityName">Stad:</label>
        <input class="form-control" name="CityName" />
    </div>
    <div class="form-group">
        <label for="ZipCode">Postnummer:</label>
        <input class="form-control" name="ZipCode" />
    </div>
    <div class="form-group">
        <label for="CountryName">Land:</label>
        <input class="form-control" name="CountryName" />
    </div>
    <div class="text-center panel-body">
        <button type="submit" class="btn btn-sm btn-dark">Lägg till</button>
    </div>
</form>
@if (Model != null)
{
    <h2>Ny stad</h2>
    <table class="table table-sm table-striped table-bordered m-2">
        <thead>
            <tr>
                <th>Id</th>
                <th>Name</th>
                <th>Postnummer</th>
                <th>Land</th>
            </tr>
        </thead>
        <tbody>
            <tr>
                <td>@Model.CitiesId</td>
                <td>@Model.CityName</td>
                <td>@Model.ZipCode</td>
                <td>@Model.CountryName</td>
                
            </tr>
        </tbody>
    </table>
}
<div class="container">
    <div class="row">
        <div class="col-1" style="text-align:center">
            <a asp-action="Index" class="btn btn-sm btn-secondary">Tillbaka</a>
        </div>
    </div>
</div>